<!doctype html>
<html lang="{{ metadata.language }}">
  <head>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-TQ3W197SNZ"></script>
    <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-TQ3W197SNZ');
    </script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ title or metadata.title }}</title>
    <link rel="icon" href="data:image/png;base64,iVBORw0KGgo=" />
    <meta
      name="description"
      content="{{ description or metadata.description }}"
    />
    <link
      rel="alternate"
      href="/feed/feed.xml"
      type="application/atom+xml"
      title="{{ metadata.title }}"
    />
    {%- css %} {% include "public/css/index.css" %} {% endcss %}
    <style>
      {% getBundle "css" %}
    </style>
  </head>
  <body>
    <header>
      <div class="logo">
        <div class="letters">
          <span class="letter-j">J</span>
          <span class="letter-r">R</span>
        </div>
      </div>
      <nav>
        <ul>
          {%- for entry in collections.all | eleventyNavigation %}
          <li>
            <a href="{{ entry.url }}" {% if entry.url == "/" and entry.url == page.url or entry.url != "/" and page.url.startsWith(entry.url) %} aria-current="page" {% endif %}>{{ entry.title }}</a>
          </li>
          {%- endfor %}
        </ul>
      </nav>
    </header>
    <main>{{ content | safe }}</main>
    <footer>
      <p>
        <em
          >Built with
          <a href="https://www.11ty.dev/">{{ eleventy.generator }}</a>
        </em>
      </p>
    </footer>
    <!-- This page `{{ page.url }}` was built on {% currentBuildDate %} -->
    <script type="module" src="{% getBundleFileUrl 'js' %}"></script>
  </body>
</html>
